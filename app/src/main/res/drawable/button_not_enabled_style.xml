<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/backgroundItem" />
            <corners android:radius="5dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/backgroundItem" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

            <stroke android:color="@color/backgroundFont"
                android:width="2dp"/>
            <corners android:radius="5dp" />

        </shape>
    </item>

</layer-list>