<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundFont">

    <include
        android:id="@+id/include_layout"
        layout="@layout/fragment_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/backgroundItem"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/include_layout">

        <CheckBox
            android:id="@+id/book_start_date_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="Priority"
            android:textAlignment="center"

            android:textSize="18sp" />

        <Button
            android:id="@+id/book_priority_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/backgroundItemLight" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>