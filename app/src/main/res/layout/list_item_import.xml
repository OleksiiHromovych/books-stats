<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroundItem"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/import_item_choice_split_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="item1 text" />

    <Spinner
        android:id="@+id/import_item_choice_split_type_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:entries="@array/import_spinner_list" />
</LinearLayout>

